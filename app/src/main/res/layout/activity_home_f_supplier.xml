<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeFSupplier"
android:background="@drawable/gradient5"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <include layout="@layout/toolbar"
        android:id="@+id/include"/>






    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        >


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/c1"


            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:src="@drawable/neworders"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Orders"
                android:textSize="20sp"
                android:textColor="#6f6f6f"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingTop="30dp"
                />




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/c2"


            >

            <ImageView
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:src="@drawable/history2"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Order"
                android:textSize="20sp"
                android:textColor="#6f6f6f"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingTop="30dp"
                />




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/c3"


            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/todeliver"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To deliver"
                android:textSize="20sp"
                android:textColor="#6f6f6f"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                />




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"

            app:cardCornerRadius="16dp"
            android:id="@+id/c4"


            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/myads"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Ads"
                android:textSize="20sp"
                android:textColor="#6f6f6f"

                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingTop="30dp"
                />




        </androidx.cardview.widget.CardView>










        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/c5"


            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fsprofile"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="#6f6f6f"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingTop="30dp"
                />




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/c6"


            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fsprofile"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/img6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="20sp"
                android:textColor="#6f6f6f"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingTop="30dp"
                />




        </androidx.cardview.widget.CardView>















    </GridLayout>


</LinearLayout>



</ScrollView>
