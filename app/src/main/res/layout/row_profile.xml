<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/anuki"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Anuki de Alwis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/title"
            android:id="@+id/banner"

            android:src="@drawable/ui_profie"/>

        <TextView
            android:id="@+id/name1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner"
            android:text="Name:"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#1B1B1B"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner"
            android:layout_toRightOf="@+id/name1"
            android:text="Anuki de Alwis"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/email1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Email:"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#1B1B1B"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name1"
            android:layout_toRightOf="@+id/email1"
            android:text="anuki@gmail.com"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/address1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:text="Address:"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#1B1B1B"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email1"
            android:layout_toRightOf="@+id/address1"
            android:text="33,Kularathne Mw,Kottawa"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/telephone1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:text="Contact No:"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#1B1B1B"/>

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address1"
            android:layout_toRightOf="@+id/telephone1"
            android:text="076-3322124"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

</LinearLayout>