<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:text="Name:"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#1B1B1B"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_toRightOf="@+id/name1"
        android:text="Anuki de Alwis"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/email1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Email:"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#1B1B1B"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_toRightOf="@+id/email1"
        android:text="anuki@gmail.com"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/address1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="Address:"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#1B1B1B"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email1"
        android:layout_toRightOf="@+id/address1"
        android:text="33,Kularathne Mw,Kottawa"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/telephone1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:text="Contact No:"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#1B1B1B"/>

    <TextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address1"
        android:layout_toRightOf="@+id/telephone1"
        android:text="076-3322124"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageid"
        android:src="@drawable/anuki"/>


</RelativeLayout>